extends ./layout/index

//- Bloque slider (reemplaza block slider del layout)
block slider 
  .slider 
    h1 Rio de Janeiro 
    em aventura
    //- Este slider podría tener fondo CSS, texto animado, etc.

//- Bloque principal de contenido
block contenido 
  main.container.mt-5
    h2.text-center.mb-5 Sobre Nosotros

    .row.mb-5
      .col-md-6
        p Vestibulum porta nec nibh eu aliquet...
        p Nullam vitae ullamcorper turpis...

      .col-md-6
        img(src="/img/inicio_nosotros.jpg", class="img-fluid")
        //- La clase img-fluid hace que la imagen sea responsiva (Bootstrap)

  .container
    include ./layout/viajes
    //- Carga el contenido del archivo viajes.pug

  .descuento
    .container
      .row
        .col-md-6
          .contenido
            h3 5% de Descuento
            p.titulo Viaje a Canada
            p.fecha 20 de Marzo 2021 - 28 De Marzo 2021
            p.precio $2,500 USD
    //- Estilizar con fondo, bordes, etc. vía CSS

  .container
    h2.mt-5.text-center Opiniones
    .row 
      include ./layout/testimoniales
      //- Muestra opiniones desde testimoniales.pug

